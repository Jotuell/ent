{% extends "ent/blog.twig" %}

{% block blog_index_posts %}
    <div class="row small-up-1 medium-up-2 large-up-2">
        {{ parent() }}
    </div>
{% endblock %}

{% block blog_index_post %}
    <div class="column">
        <h2>{{ post.title }}</h2>
        <p>{{ post.content|excerpt(40) }}</p>
    </div>
{% endblock %}
